<h1 ><%= workout.title %></h1>

<table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Sets</th>
        <th scope="col">Repetitions</th>
        <th scope="col">Time</th>
      </tr>
    </thead>
    <tbody>
        <% workout.exercises.forEach(exercise => { %>
            <tr scope="row">
                <td><%= exercise.name %></td>
                <td><%= exercise.description %></td>
                <td><%= exercise.numberOfSets %> times</td>
                <td><%= exercise.numberOfRepetitions %> times</td>
                <td><%= exercise.timeInMinutes %> minutes</td>
            </tr>
        <% }); %>
    </tbody>
  </table>

  <% if (workout.exercises.length == 0) { %>
    <p><strong>No exercises</strong></p>
  <% } %>
  
    <div class="action-container">
        <a class="btn btn-primary" href="/workout">Back</a>
        <a class="btn btn-primary" href="<%= `/workout/${workout._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" a>Delete</a>
        <a class="btn btn-primary" href="<%= `/workout/${workout._id}/new/exercise` %>">Add exercise</a>
    </div>
